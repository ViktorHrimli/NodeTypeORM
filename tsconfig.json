{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES5",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  }
}
